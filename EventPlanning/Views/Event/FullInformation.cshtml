@model EventPlanning.Models.EventModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FullInformation</title>
</head>
<body>
    <div class="form-horizontal">


        <p><h4><b>Name </b></h4></p> <p> @Model.Name</p>
        <p><h4><b>Date </b></h4></p> <p>  @Model.Date</p>

        @if (Model.Fields.Count > 0)
        {
            foreach (var f in Model.Fields)
            {
                <p><h4><b>@f.Name </b></h4></p> <p> @f.Value</p>
            }
        }

        @using (Html.BeginForm())
        {
            <a href="/Event/EventForm" class="btn btn-default">Back</a>
        }
    </div>
</body>
</html>
